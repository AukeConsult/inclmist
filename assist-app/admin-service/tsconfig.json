{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "types": ["jest"],
    "baseUrl": "./",
    "paths": {
      "shared-library": ["./node_modules/shared-library"]
    },
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "include": [
    "./src/**/*",
  ]
}
