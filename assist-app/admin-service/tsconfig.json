{
  "compilerOptions": {
    "module": "NodeNext",
    "resolveJsonModule": true,               // json imports
    "esModuleInterop": true,                 // import common modules as ES6 Modules
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2022"
  },
  "compileOnSave": true,
  "include": [
    "src", "src/**/*"
  ]
}