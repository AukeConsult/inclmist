{
  "functions": [
    {
      "source": ".",
      "codebase": "default",
      "ignore": [
        "./lib",
        "./node_modules",
        "**/src/**",
        "**/node_modules/**",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "emulators": {
    "auth": { "port": 9099 },
    "functions": { "port": 5001 },
    "firestore": { "port": 9001 },
    "storage": { "port": 9199 },
    "ui": { "enabled": true },
    "singleProjectMode": true
  },
  "storage": {
    "rules": "storage.rules"
  }
}
