{
  "compilerOptions": {
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "types": ["jest"],
    "paths": {
      "shared-library": ["./node_modules/shared-library"],
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.test.ts"
  ]
}
